{
  "name": "noteflow-backend",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "app.js",
  "scripts": {
    "start": "set NODE_ENV=development && npx nodemon ./src/app.js",
    "start-prod": "set NODE_ENV=production && npx nodemon ./src/app.js",
    "test": "set NODE_ENV=test && jest --detectOpenHandles",
    "test:coverage": "set NODE_ENV=test && jest --coverage --detectOpenHandles",
    "format": "prettier --config .prettierrc \"**/*.+(js|json)\" --write",
    "lint": "eslint src/**/*.js --fix && eslint tests/**/*.js --fix",
    "db:migrate": "knex --knexfile src/model/postgres/knexfile.js migrate:latest",
    "db:seed": "knex --knexfile src/model/postgres/knexfile.js seed:run",
    "db:rollback": "knex --knexfile src/model/postgres/knexfile.js migrate:rollback",
    "mongo:seed": "node src/model/mongodb/seeds/node-repo.js",
    "check:migrate": "node ./check_migrate.js"
  },
  "author": "sdm-group-6",
  "license": "ISC",
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "coverage"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.341.0",
    "@koa/cors": "^4.0.0",
    "@koa/multer": "^3.0.2",
    "@teamwork/websocket-json-stream": "^2.0.0",
    "argon2": "^0.30.3",
    "aws-sdk": "^2.1386.0",
    "bcrypt": "^5.1.0",
    "config": "^3.3.9",
    "crypto-js": "^4.1.1",
    "dotenv": "^16.0.3",
    "fs": "^0.0.2",
    "googleapis": "^118.0.0",
    "http": "^0.0.1-security",
    "humps": "^2.0.1",
    "ioredis": "^5.3.1",
    "jsdom": "^22.1.0",
    "jsonwebtoken": "^9.0.0",
    "knex": "^2.4.2",
    "koa": "^2.14.1",
    "koa-body": "^6.0.1",
    "koa-logger": "^3.2.1",
    "koa-redis": "^4.0.1",
    "koa-router": "^12.0.0",
    "koa-send": "^5.0.1",
    "koa-session": "^6.4.0",
    "koa-static": "^5.0.0",
    "koa2-swagger-ui": "^5.8.0",
