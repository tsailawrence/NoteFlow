    "yamljs": "^0.3.0",
    "yup": "^1.2.0"
  },
  "devDependencies": {
    "babel-jest": "^29.5.0",
    "eslint": "^8.41.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.27.5",
    "jest": "^29.5.0",
    "nodemon": "^2.0.21",
    "prettier": "^2.8.6"
  }
}
